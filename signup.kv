MDScreen:
    name: 'signup'

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: 'chevron-left'
            user_font_size: '35sp'
            pos_hint: {'center_y': .95}
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'login'

        MDLabel:
            text: 'Fa√ßa o login'
            font_size: '18sp'
            font_name: 'assets/Poppins-Regular.ttf'
            pos_hint: {'center_x': .615, 'center_y': .949}

        Image:
            source: 'assets/111.png'
            size_hint: .26, .26
            pos_hint: {'center_x': .5, 'center_y': .8}



        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {'center_x': .5, 'center_y': .65}
            MDLabel:
                text: 'Nome'
                font_size: '14sp'
                font_name: 'assets/Poppins-Medium.ttf'
                pos_hint: {'center_x': .5, 'center_y': .9}
                text_color: 1, 1, 1, 1  # Definindo a cor do texto como branco
            TextInput:
                id: username_field
                size_hint_y: .75
                font_name: 'assets/Poppins-Regular.ttf'
                pos_hint: {'center_x': .49, 'center_y': .4}
                background_color: 0, 0, 0, 0
                cursor_color: 0, 0, 0, 1
                cursor_width: '2sp'
                foreground_color: 120/255, 120/255, 120/255, 1
                font_size: '17sp'
                multiline: False

            Image:
                source: 'assets/user.png'
                pos_hint: {'center_x': .96, 'center_y': .5}
                size_hint: .5, .5
            MDFloatLayout:
                pos_hint: {'center_x': .5, 'center_y': .0}
                size_hint_y: .03
                md_bg_color: 120/255, 120/255, 120/255, 1

        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {'center_x': .5, 'center_y': .52}
            MDLabel:
                text: 'Cadastre uma senha'
                font_size: '14sp'
                font_name: 'assets/Poppins-Medium.ttf'
                pos_hint: {'center_x': .5, 'center_y': .9}
            TextInput:
                id: password_field
                size_hint_y: .75
                font_name: 'assets/Poppins-Regular.ttf'
                pos_hint: {'center_x': .49, 'center_y': .4}
                background_color: 0, 0, 0, 0
                cursor_color: 0, 0, 0, 1
                cursor_width: '2sp'
                font_size: '17sp'
                multiline: False
                password: True
            Image:
                source: 'assets/senha.png'
                pos_hint: {'center_x': .96, 'center_y': .5}
                size_hint: .4, .4
            MDFloatLayout:
                pos_hint: {'center_x': .5, 'center_y': .0}
                size_hint_y: .03
                md_bg_color: 120/255, 120/255, 120/255, 1


        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {'center_x': .5, 'center_y': .39}
            MDLabel:
                text: 'Telefone'
                font_size: '14sp'
                font_name: 'assets/Poppins-Medium.ttf'
                pos_hint: {'center_x': .5, 'center_y': .9}
            TextInput:
                id: telefone_field
                size_hint_y: .75
                font_name: 'assets/Poppins-Regular.ttf'
                pos_hint: {'center_x': .49, 'center_y': .4}
                background_color: 0, 0, 0, 0
                cursor_color: 0, 0, 0, 1
                cursor_width: '2sp'
                font_size: '17sp'
                multiline: False

            Image:
                source: 'assets/tel.png'
                pos_hint: {'center_x': .96, 'center_y': .5}
                size_hint: .4, .4
            MDFloatLayout:
                pos_hint: {'center_x': .5, 'center_y': .0}
                size_hint_y: .03
                md_bg_color: 120/255, 120/255, 120/255, 1

        Button:
            text: 'Cadastrar'
            background_color: 0, 0, 0, 0
            text_color: 1, 1, 1, 1
            font_name: 'assets/Poppins-Medium.ttf'
            size_hint: .79, .08
            pos_hint: {'center_x': .5, 'center_y': .15}
            on_release:
                app.register_user(username_field.text, password_field.text, telefone_field.text)
            canvas.before:
                Color:
                    rgb: 226/255, 0, 48/255, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [2]


