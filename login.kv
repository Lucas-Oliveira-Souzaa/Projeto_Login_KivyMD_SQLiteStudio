MDScreen:
    name: 'login'
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: 'chevron-left'
            user_font_size: '35sp'
            pos_hint: {'center_y': .95}
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'pre_splash'


        MDLabel:
            text: 'Voltar'
            font_size: '18sp'
            font_name: 'assets/Poppins-Regular.ttf'
            pos_hint: {'center_x': .615, 'center_y': .949}

        Image:
            source: 'assets/111.png'
            size_hint: .26, .26
            pos_hint: {'center_x': .5, 'center_y': .8}

        MDLabel:
            text: 'Prossiga com o seu'
            font_size: '22sp'
            font_name: 'assets/Poppins-Medium.ttf'
            color: 120/255, 120/255, 120/255, 1
            pos_hint: {'center_x': .6, 'center_y': .65}

        MDLabel:
            text: 'Login'
            font_size: '22sp'
            font_name: 'assets/Poppins-SemiBold.ttf'
            pos_hint: {'center_x': .6, 'center_y': .58}
            color: 226/255, 0, 48/255, 1

        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {'center_x': .5, 'center_y': .42}
            MDLabel:
                text: 'Insira seu nome'
                font_size: '14sp'
                font_name: 'assets/Poppins-Medium.ttf'
                pos_hint: {'center_x': .5, 'center_y': .9}
            TextInput:
                id: username_field
                size_hint_y: .75
                font_name: 'assets/Poppins-Regular.ttf'
                pos_hint: {'center_x': .49, 'center_y': .4}
                background_color: 0, 0, 0, 0
                cursor_color: 0, 0, 0, 1
                cursor_width: '2sp'
                foreground_color: 120/255, 120/255, 120/255, 1
                font_size: '17sp'
                multiline: False

            Image:
                source: 'assets/user.png'
                pos_hint: {'center_x': .96, 'center_y': .5}
                size_hint: .5, .5
            MDFloatLayout:
                pos_hint: {'center_x': .5, 'center_y': .0}
                size_hint_y: .03
                md_bg_color: 120/255, 120/255, 120/255, 1

        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {'center_x': .5, 'center_y': .28}
            MDLabel:
                text: 'Insira sua senha'
                font_size: '14sp'
                font_name: 'assets/Poppins-Medium.ttf'
                pos_hint: {'center_x': .5, 'center_y': .9}
            TextInput:
                id: password_field
                size_hint_y: .75
                font_name: 'assets/Poppins-Regular.ttf'
                pos_hint: {'center_x': .49, 'center_y': .4}
                background_color: 0, 0, 0, 0
                cursor_color: 0, 0, 0, 1
                cursor_width: '2sp'
                font_size: '17sp'
                multiline: False
                password: True

            Image:
                source: 'assets/senha.png'
                pos_hint: {'center_x': .96, 'center_y': .5}
                size_hint: .4, .4
            MDFloatLayout:
                pos_hint: {'center_x': .5, 'center_y': .0}
                size_hint_y: .03
                md_bg_color: 120/255, 120/255, 120/255, 1

        Button:
            text: 'Acessar'
            background_color: 0, 0, 0, 0
            font_name: 'assets/Poppins-Medium.ttf'
            size_hint: .79, .08
            pos_hint: {'center_x': .5, 'center_y': .15}
            on_release:
                app.validate_login(username_field.text, password_field.text)
            canvas.before:
                Color:
                    rgb: 226/255, 0, 48/255, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [2]
        MDTextButton:
            text: 'Cadastre-se'
            font_size: '13sp'
            pos_hint: {'center_x': .5, 'center_y': .07}
            halign: 'center'
            color: 120/255, 120/255, 120/255, 12
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'signup'